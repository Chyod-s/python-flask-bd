{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Flask API",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "cwd": "${workspaceFolder}",
      "env": {
        "FLASK_APP": "src/api_main/main.py",  
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "1",
        "PYTHONPATH": "${workspaceFolder}" 
      },
      "args": ["run", "--no-debugger", "--no-reload","--port=5055"],
      "jinja": true
    },
    {
      "name": "Debug Frontend JS",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://127.0.0.1:5055",
      "webRoot": "${workspaceFolder}/src/api_main/static",
      "pathMapping": {
        "/static": "${workspaceFolder}/src/api_main/static"
      }
    }
  ]
}
